@model IEnumerable<SIMAMUS.GUI.Models.NivelUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Información general sobre los niveles de Usuario</h2>

<p>
    @Html.ActionLink("Nuevo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdNivel }) |
            @Html.ActionLink("Ver detalles", "Details", new { id=item.IdNivel }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdNivel })
        </td>
    </tr>
}

</table>
