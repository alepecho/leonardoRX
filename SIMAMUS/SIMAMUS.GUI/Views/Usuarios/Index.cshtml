@model IEnumerable<SIMAMUS.GUI.Models.Usuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Información general de los usuarios</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Contrasenna)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NivelUsuario.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Persona.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Contrasenna)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NivelUsuario.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Persona.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.NombreUsuario }) |
            @Html.ActionLink("Ver detalles", "Details", new { id=item.NombreUsuario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.NombreUsuario })
        </td>
    </tr>
}

</table>
