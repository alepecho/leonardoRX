@model SIMAMUS.GUI.Models.Usuario

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<br /><br /><br />
<div class="container">
    <div class="text-center">
        <h1>Inicio de Sesión</h1>
    </div>
    <div class="text-center">
        @using (Html.BeginForm("Login", "Usuarios", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <br /><br />
            <div class="col-md-4"></div>
            <div class="form-inline">
                @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br />
            <div class="col-md-4"></div>
            <div class="form-inline">
                @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-3">
                    @Html.EditorFor(model => model.Contrasenna, new { htmlAttributes = new { @type = "password", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <br /><br /><br /><br />
            <div class="form-group">
                <div class="col-md-offset-6 col-md-2">
                    <input type="submit" value="Ingresar" class="btn btn-primary btn-block btn-md" />
                </div>
            </div>
        }
    </div>
</div>
<br />

