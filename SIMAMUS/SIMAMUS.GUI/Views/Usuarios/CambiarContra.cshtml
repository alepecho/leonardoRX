@model SIMAMUS.GUI.Models.Usuario

@{
    ViewBag.Title = "CambiarContra";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string mensajeError = "";
    mensajeError = ViewBag.MensajeError;
}

<h2>CambiarContra</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Usuario</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.NombreUsuario)

    <br />
    @Html.Label("Al realizar el cambio, seras enviado al login nuevamente, " + User.Identity.Name, htmlAttributes: new { })
    <br /><br /><br />

    <div>
        @Html.Label("Contraseña Antigua", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("contraVieja", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })
        </div>
    </div>
    <br /><br />
    <div>
        @Html.Label("Contraseña nueva", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("contraNueva", new { htmlAttributes = new { @class = "form-control" }, @type="password" })
            @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })
        </div>
    </div>
    <br /><br />
    <div>
        @Html.Label("Confirmar contraseña nueva", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.Editor("contraNueva2", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
            @Html.ValidationMessageFor(model => model.Contrasenna, "", new { @class = "text-danger" })
        </div>
    </div>

    @if (mensajeError.IsEmpty())
    {

    }
    else
    {
        <div class="alert alert-warning">
            <strong>@mensajeError</strong>
        </div>
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}