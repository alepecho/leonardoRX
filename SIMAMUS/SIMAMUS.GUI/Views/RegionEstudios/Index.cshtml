@model IEnumerable<SIMAMUS.GUI.Models.RegionEstudio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Información general sobre las regiones de estudio</h2>

<p>
    @Html.ActionLink("Registrar", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CodigoRegion }) |
            @Html.ActionLink("Ver detalles", "Details", new { id=item.CodigoRegion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CodigoRegion })
        </td>
    </tr>
}

</table>
