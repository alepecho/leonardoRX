@model IEnumerable<SIMAMUS.GUI.Models.Especialidad>

@{
    ViewBag.Title = "IndexAdministrador";
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<h2>IndexAdministrador</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreEspecialidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreEspecialidad)
        </td>
        <td>
            @Html.ActionLink("Editar Especialidad", "Edit", new { id=item.IdEspecialidad }) |
            @Html.ActionLink("Detalles de la Especialidad", "Details", new { id=item.IdEspecialidad })
        </td>
    </tr>
}

</table>
